<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HelloWorldApp"
             x:Class="HelloWorldApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
            <Label Text="Random Greeting"
                   TextColor="White"
                   FontSize="30"
                   HorizontalTextAlignment="Center"
                    />
        </Frame>
        
            <Label HorizontalTextAlignment="Center" x:Name="GreetingLabel" Text="Hello World" FontSize="Title" Padding="30,10,30,10" />
            <Button x:Name="GreetingBtn" Text="Random Greeting" BackgroundColor="Blue" TextColor="White"  CornerRadius="12" Clicked="Handle_Greeting"></Button>
            
            <Label x:Name="CurrentGreeting" VerticalOptions="End" HorizontalTextAlignment="Center"  Text="Greeting 1 of 8" FontSize="Caption" Padding="30,10,30,10" />
        
            
    </StackLayout>
    

</ContentPage>
